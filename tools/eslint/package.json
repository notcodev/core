{
  "name": "@notcodev/eslint",
  "type": "module",
  "version": "2.0.0",
  "private": false,
  "packageManager": "pnpm@10.9.0",
  "description": "ESLint Configs",
  "author": {
    "name": "Erik Codev",
    "url": "https://github.com/notcodev"
  },
  "license": "MIT",
  "homepage": "https://github.com/notcodev/core",
  "repository": {
    "url": "https://github.com/notcodev/core"
  },
  "bugs": {
    "url": "https://github.com/notcodev/core/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "react",
    "node"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.9.0"
  },
  "scripts": {
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "build": "tsdown",
    "format": "prettier --write \"*.js\"",
    "lint": "eslint . --fix",
    "lint-inspector": "npx @eslint/config-inspector",
    "typecheck": "tsc"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "~7.4.3",
    "@eslint-react/eslint-plugin": "^2.13.0",
    "@next/eslint-plugin-next": "^16.1.6",
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@tanstack/eslint-plugin-router": "^1.155.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-flat-config-utils": "^3.0.1",
    "eslint-plugin-effector": "^0.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "0.5.0"
  },
  "devDependencies": {
    "@notcodev/prettier": "workspace:*",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.20.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,cjs,mjs,cts,mts}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
